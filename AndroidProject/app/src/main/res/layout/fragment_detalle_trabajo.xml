<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hacu.micafe.Recolector.Fragments.DetalleTrabajoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Informacion De Oferta"
                />
            <TextView
                android:id="@+id/dettrarec_id"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="###"
                />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Fecha Inicio"
                    />
                <TextView
                    android:id="@+id/dettrarec_fechainicio"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaaa-MM-dd"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Modo de Pago"
                    />
                <TextView
                    android:id="@+id/dettrarec_modopago"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Valor Pago"
                    />
                <TextView
                    android:id="@+id/dettrarec_valorpago"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Recolectores necesarios"
                    />
                <TextView
                    android:id="@+id/dettrarec_vacantes"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Dias de trabajo"
                    />
                <TextView
                    android:id="@+id/dettrarec_diastrabajo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Caracteristicas de la planta"
                    />
                <TextView
                    android:id="@+id/dettrarec_planta"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Servicios"
                    />
                <TextView
                    android:id="@+id/dettrarec_servicios"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="InformaciÃ³n De La Finca"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nombre"
                    />
                <TextView
                    android:id="@+id/dettrarec_nombrefinca"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Administrador"
                    />
                <TextView
                    android:id="@+id/dettrarec_nombreadmin"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Telefono de contacto"
                    />
                <TextView
                    android:id="@+id/dettrarec_telefono"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ubicacion de la finca"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Departamento"
                    />

                <TextView
                    android:id="@+id/dettrarec_departamento"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Municipio"
                    />
                <TextView
                    android:id="@+id/dettrarec_municipio"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Corregimiento"
                    />
                <TextView
                    android:id="@+id/dettrarec_corregimiento"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Vereda"
                    />
                <TextView
                    android:id="@+id/dettrarec_vereda"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_disponible"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">
            <Button
                android:id="@+id/dettrarec_btnpesadas"
                android:text="Ver pesadas"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/dettrarec_btnvolver"
                android:text="Volver"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
