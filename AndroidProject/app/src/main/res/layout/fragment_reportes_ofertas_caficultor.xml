<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Caficultor.FragmentsCaf.ReportesOfertasCaficultorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                android:text="REPORTES DE LA OFERTA"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/vinotinto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="Costos"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/vinotinto"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/repofecaf_totalcostos"
                        android:text="$$$"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="50"
                        android:textColor="@color/vinotinto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclercostosreporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="Pesadas"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textColor="@color/vinotinto"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/repofecaf_totalpesadas"
                        android:text="$$$"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="50"
                        android:textColor="@color/vinotinto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclercostospesadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/repofecaf_btnvolver"
            android:text="Volver a  oferta"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorAccent"
            />
    </LinearLayout>

</FrameLayout>