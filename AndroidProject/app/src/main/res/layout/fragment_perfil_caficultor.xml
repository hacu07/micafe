<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hacu.micafe.Caficultor.FragmentsCaf.PerfilCaficultorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/percaf_img"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:background="#fff"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nombre"
                    />
                <TextView
                    android:id="@+id/percaf_nombre"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese Su Nombre Completo"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Correo"
                    />
                <EditText
                    android:id="@+id/percaf_correo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese Su Correo Electronico"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cedula"
                    />
                <TextView
                    android:id="@+id/percaf_cedula"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese el numero de Cedula"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Celular"
                    />
                <EditText
                    android:id="@+id/percaf_celular"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese su numero de celular"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Fecha De Nacimiento"
                    />
                <TextView
                    android:id="@+id/percaf_fechanacimiento"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="aaaa/MM/dd"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Direccion De Residencia"
                    />
                <EditText
                    android:id="@+id/percaf_direccion"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese la direccion de su residencia"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Departamento De Residencia"
                    />
                <EditText
                    android:id="@+id/percaf_departamento"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese el departamento de residencia"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Municipio De Residencia"
                    />
                <EditText
                    android:id="@+id/percaf_municipio"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese su municipio de residencia"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/percaf_btnactualizar"
            android:text="Actualizar Perfil"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimary"
            />

    </LinearLayout>

</FrameLayout>
