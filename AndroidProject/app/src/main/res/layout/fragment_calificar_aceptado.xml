<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hacu.micafe.Caficultor.FragmentsCaf.CalificarAceptadoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:weightSum="4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="3">
                <EditText
                    android:id="@+id/calacecaf_comentario"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLength="400"
                    android:hint="Escriba un comentario que evalue el trabajo del recolector"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <SeekBar
                        android:id="@+id/calacecaf_calificacion"
                        android:max="5"
                        android:min="1"
                        android:progress="3"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/calacecaf_textocalificacion"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        android:text="Bueno"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                <Button
                    android:id="@+id/calacecaf_btnRegistrar"
                    android:layout_width="match_parent"
                    android:text="Registrar Calificacion"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:background="@color/colorPrimary"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/calacecaf_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <Button
            android:id="@+id/calacecaf_btnVolver"
            android:layout_width="match_parent"
            android:text="Volver"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorAccent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</FrameLayout>
